<?xml version="1.0"?>
<layout version="0.1.0">
    
    <default> 
        <reference name="head">
            <!-- this works --> 
            <action method="addJs"><js>jquery/jquery-1.9.1.js</js></action>
            <action method="addJs"><js>jquery/jquery.jOrgChart.js</js></action>
            <action method="addCss"><css>magemlm.css</css></action>
        </reference>
   </default>
   
   
   <adminhtml_customer_edit>
        <reference name="customer_edit_tabs">
            <action method="addTab"><name>customer_edit_tab_magemlm</name><block>magemlm/adminhtml_customer_edit_tab_magemlm</block></action>
        </reference>
   </adminhtml_customer_edit>
   

    <magemlm_adminhtml_structure_index>
        <reference name="content">
            <block type="magemlm/adminhtml_reports_products_form" name="productForm">
                <action method="setTemplate">
                    <template>magemlm/structure.phtml</template>
                </action>
            </block>
        </reference>
    </magemlm_adminhtml_structure_index>
    
    
    <chartreports_adminhtml_products_getproducts>
        <block type="chartreports/adminhtml_reports_products_getproducts" name="root" output="toHtml">
            <action method="setTemplate">
                <template>chartreports/getproducts.phtml</template>
            </action>
        </block>
    </chartreports_adminhtml_products_getproducts>
    
    
    <chartreports_adminhtml_products_chart>
        <reference name="content">
            <block type="chartreports/adminhtml_reports_products_list" name="productChart">
                <action method="setTemplate">
                    <template>chartreports/chart.phtml</template>
                </action>
            </block>
            </reference>
    </chartreports_adminhtml_products_chart>
    
</layout>